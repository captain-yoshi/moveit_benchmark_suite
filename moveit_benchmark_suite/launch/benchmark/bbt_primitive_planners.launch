<launch>
<!--
<env name="ROSCONSOLE_CONFIG_FILE"
       value="$(find moveit_benchmark_suite)/config/custom_rosconsole.conf"/>
-->
<!-- benchmark options file -->
  <arg name="bench_opts" default="$(find moveit_benchmark_suite)/config/benchmark/bbt_primitive_planners.yaml"/>

  <!-- Load robot settings -->
  <include file="$(find moveit_benchmark_suite_panda_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- Load warehouse containing scenes and queries to benchmark -->
  <include file="$(find moveit_benchmark_suite_panda_moveit_config)/launch/default_warehouse_db.launch" />

  <!-- Load all planning pipelines that will be benchmarked -->
  <group ns="moveit_benchmark_suite_run_benchmark">
    <include ns="ompl" file="$(find moveit_benchmark_suite_panda_moveit_config)/launch/planning_pipeline.launch.xml">
      <arg name="pipeline" value="ompl" />
    </include>

    <include ns="chomp" file="$(find moveit_benchmark_suite_panda_moveit_config)/launch/planning_pipeline.launch.xml">
      <arg name="pipeline" value="chomp" />
    </include>

    <include ns="stomp" file="$(find moveit_benchmark_suite_panda_moveit_config)/launch/planning_pipeline.launch.xml">
      <arg name="pipeline" value="stomp" />
    </include>
  </group>

  <!-- Launch benchmark node -->
  <node name="moveit_benchmark_suite_run_benchmark" pkg="moveit_benchmark_suite" type="moveit_benchmark_suite_run_benchmark" output="screen" required="true" launch-prefix="">
    <rosparam command="load" file="$(arg bench_opts)"/>
  </node>
</launch>
